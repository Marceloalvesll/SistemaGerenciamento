@model IEnumerable<SistemaGerenciamento.Models.Reserva>

@{
    ViewBag.Title = "Reservas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="mt-4 mb-3">Reservas</h2>

<p>
    <a href="@Url.Action("Create", "Reservas")" class="btn btn-primary">Criar Nova</a>
</p>
<table class="table table-striped">
    <thead>
        <tr>
            <th>ID da Reserva</th>
            <th>Número da Mesa</th>
            <th>Data e Hora da Reserva</th>
            <th>Quantidade de Pessoas</th>
            <th>Capacidade da Mesa</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Mesa.Numero)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DataHoraReserva)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.QuantidadePessoas)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Mesa.Capacidade)
                </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.Id }, new { @class = "btn btn-warning btn-sm" }) |
                    @Html.ActionLink("Detalhes", "Details", new { id = item.Id }, new { @class = "btn btn-info btn-sm" }) |
                    @Html.ActionLink("Excluir", "Delete", new { id = item.Id }, new { @class = "btn btn-danger btn-sm" })
                </td>
            </tr>
        }
    </tbody>
</table>
